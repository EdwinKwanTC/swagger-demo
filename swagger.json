{
  "openapi": "3.0.3",
  "info": {
    "title": "Swagger Demo",
    "description": "Fake Online REST API for Testing and Prototyping",
    "version": "0.0.1"
  },
  "paths": {
    "/": {
      "get": {
        "description": "Hello World",
        "responses": {
          "200": {
            "description": "Hello World",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "example": "Hello World!"
                }
              }
            }
          }
        }
      }
    },
    "/hello": {
      "post": {
        "description": "Hello World",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "John"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Hello World",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Hello John!"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
